<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.s_maruks.tutinava.eventgallery.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rw_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp"></android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/btn_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rw_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text="Create Event"
        tools:layout_editor_absoluteX="264dp"
        tools:layout_editor_absoluteY="142dp" />

    <Button
        android:id="@+id/btn_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_create"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="Join Event" />

</RelativeLayout>
